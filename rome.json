{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": false,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "tab",
    "indentSize": 4,
    "lineWidth": 100,
    "ignore": [],
    "quoteStyle": "single",
    "trailingComma": "all",
    "semicolons": "always"
  },
  "files": {
    "ignore": ["dist/"]
  }
}